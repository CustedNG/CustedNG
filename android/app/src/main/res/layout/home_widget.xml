<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/widgetBackground"
    android:orientation="vertical">

    <TextView
        android:id="@+id/widget_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:paddingStart="19dp"
        android:paddingEnd="19dp"
        android:textColor="#03A9F4"
        android:textSize="27sp"
        android:textStyle="bold"
        tools:text="Time" />

    <RelativeLayout
        android:id="@+id/widget_container_inner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="7dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="22dp">

        <TextView
            android:id="@+id/widget_course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/widgetTitleText"
            android:textSize="13sp"
            tools:text="Course" />

        <TextView
            android:id="@+id/widget_position"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/widget_course"
            android:textColor="@color/widgetTitleText"
            android:textSize="13sp"
            tools:text="Position" />

        <TextView
            android:id="@+id/widget_teacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/widget_position"
            android:textColor="@color/widgetTitleText"
            android:textSize="13sp"
            tools:text="Teacher" />

    </RelativeLayout>

    <TextView
        android:id="@+id/widget_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:maxLines="2"
        android:paddingStart="19dp"
        android:paddingEnd="19dp"
        android:paddingBottom="18dp"
        android:textColor="@color/widgetSummaryText"
        android:textSize="13sp"
        tools:text="UpdateTime" />

</RelativeLayout>